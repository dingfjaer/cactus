---
import PageLayout from "@/layouts/Base.astro";
// src/pages/view-pdf.astro
const pdfPath = "/files/CV_Ding_Chen.pdf"; // Path to your PDF file
---

<PageLayout meta={{ title: "PDF Viewer" }}>
	<h1></h1>
	<div style="text-align: center; margin-bottom: 20px;">
		<button
			onclick="window.open('files/CV_Ding_Chen.pdf', '_blank')"
			style="padding: 10px 20px; background-color: #29bc89; color: rgb(237, 255, 235); border: none; border-radius: 24px; cursor: pointer;"
		>
			Les CV-en i ny fane
		</button>
	</div>
	<iframe
		src={pdfPath}
		width="100%"
		height="1024px"
		style="border: none; transition: box-shadow 0.3s ease; border-radius: 8px;"
		onmouseover="this.style.boxShadow='0px 6px 15px rgba(0, 0, 0, 0.2)'"
		onmouseout="this.style.boxShadow='0px 4px 10px rgba(0, 0, 0, 0.1)'"></iframe>
</PageLayout>
