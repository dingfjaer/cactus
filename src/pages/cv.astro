---
import PageLayout from "@/layouts/Base.astro";
// src/pages/view-pdf.astro
const pdfPath = "/files/CV_Ding_Chen.pdf"; // Path to your PDF file
const baseUrl = import.meta.env.BASE_URL || Astro.site?.toString() || "";
const pdfUrl = `${baseUrl}files/CV_Ding_Chen.pdf`;
---

<PageLayout meta={{ title: "PDF Viewer" }}>
	<h1></h1>
	<div style="text-align: left; margin-bottom: 20px;">
		<a href={pdfUrl} target="_blank" rel="noopener noreferrer">
			<button
				style="padding: 10px 20px; background-color: #29bc89; color: rgb(237, 255, 235); border: none; border-radius: 24px; cursor: pointer;"
			>
				Les CV-en i ny fane
			</button>
		</a>
	</div>
	<div
		style="position: relative; padding-bottom: 56.25%; height: 956px; overflow: hidden; max-width: 100%; background-color:none;"
	>
		<iframe
			src={pdfUrl}
			style="position: absolute; top: 0; left: 0; width: 100%; height: 1024px; border: none; 
			transition: box-shadow 0.3s ease; border-radius: 8px;"
			onmouseover="this.style.boxShadow='0px 6px 15px rgba(0, 0, 0, 0.2)'"
			onmouseout="this.style.boxShadow='0px 4px 10px rgba(0, 0, 0, 0.1)'"
			allowfullscreen></iframe>
	</div>
</PageLayout>
